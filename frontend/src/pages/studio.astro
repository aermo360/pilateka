---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import StudioHero from '../components/StudioHero.astro';
import StudioIntro from '../components/StudioIntro.astro';
import StudioMethods from '../components/StudioMethods.astro';
import StudioInterior from '../components/StudioInterior.astro';
import Footer from '../components/Footer.astro';

// SEO data for studio page
const title = "Nasze Studio - Pilateka Wrocław | Klasyczny Pilates";
const description = "Poznaj Pilatekę - kameralne studio klasycznego pilatesu we Wrocławiu. Premium sprzęt, wykwalifikowana kadra i przestrzeń stworzona do uważnego ruchu.";
---

<Layout title={title} description={description}>
	<Navigation />
	<main>
		<StudioHero />
		<StudioIntro />
		<StudioMethods />
		<StudioInterior />

        {/* Helpful Info Section */}
        <section class="bg-white dark:bg-surface-dark border-t border-gray-100 dark:border-gray-800 py-16">
            <div class="max-w-4xl mx-auto px-4 text-center">
                <h3 class="text-xl font-display text-gray-900 dark:text-white mb-6">Ważne Informacje</h3>
                <p class="text-gray-600 dark:text-gray-300 font-light mb-8">
                    Cenimy wzajemny szacunek i spokój. Prosimy o zapoznanie się z naszym regulaminem, aby zapewnić wszystkim komfortowe warunki ćwiczeń.
                </p>
                <div class="flex flex-col sm:flex-row justify-center items-center space-y-4 sm:space-y-0 sm:space-x-8">
                    <a class="flex items-center text-primary dark:text-white hover:opacity-70 transition-opacity" href="/regulamin">
                        <span class="material-icons-outlined mr-2">description</span>
                        <span class="text-sm uppercase tracking-widest">Link do regulaminu</span>
                    </a>
                </div>
            </div>
        </section>
	</main>
	<Footer />
</Layout>

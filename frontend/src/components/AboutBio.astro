---
import { fetchApi } from "../lib/strapi";
import { Image } from "astro:assets";

interface AboutBioData {
    storyTitle: string;
    storyContent: string;
    quote: string;
    image: {
        url: string;
        alternativeText: string;
    };
}

let data;
try {
    data = await fetchApi<AboutBioData>({
        endpoint: "about-bio",
        query: "populate=*",
    });
} catch (e) {
    data = null;
}

if (!data) {
    data = {
        storyTitle: "O mnie",
        storyContent:
            "Cześć! Mam na imię Kasia i zapraszam Cię do Pilateki – miejsca, w którym mogę się dzielić swoją pasją do genialnej formy ruchu, jaką jest pilates.\n\nSwoją przygodę z pilatesem zaczęłam w 2018 roku, a dwa lata później rozpoczęłam kursy nauczycielskie. Miałam okazję uczyć się od najlepszych master trenerów klasycznego pilatesu w Polsce i za granicą – ukończyłam 3 poziomy Classical Pilates Pioneer Program u Weroniki Ratkowskiej, Reformer i Cadillac Extensive Course u Karoliny Libelt, szkoliłam się również pod okiem Sonje Mayo, Lesley Bell, Victorii Torie-Capan, Carolyne Ergin oraz Elaine Ewing.",
        quote: "",
        image: {
            url: "https://images.unsplash.com/photo-1544005313-94ddf0286df2?auto=format&fit=crop&q=80&w=800",
            alternativeText: "Zdjęcie portret Katarzyny Wiśniewskiej",
        },
    };
}

const strapiUrl = import.meta.env.STRAPI_URL || "";
const imageUrl = data.image.url.startsWith("http")
    ? data.image.url
    : `${strapiUrl}${data.image.url}`;
---

<section class="bg-white dark:bg-background-dark py-16 lg:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-start">
            <div class="relative group">
                <div
                    class="aspect-[3/4] w-full bg-gray-200 dark:bg-gray-700 overflow-hidden relative shadow-sm"
                >
                    <Image
                        src={imageUrl}
                        alt={data.image.alternativeText}
                        width={600}
                        height={800}
                        class="w-full h-full object-cover object-center grayscale hover:grayscale-0 transition-all duration-1000 ease-in-out"
                    />
                    <div
                        class="absolute bottom-0 left-0 w-full h-1/3 bg-gradient-to-t from-primary/60 to-transparent opacity-40"
                    >
                    </div>
                </div>
            </div>
            <div class="space-y-10 lg:pl-8">
                <div class="space-y-6">
                    <h2
                        class="font-accent text-3xl md:text-4xl text-primary dark:text-white mb-4 uppercase tracking-widest"
                    >
                        {data.storyTitle}
                    </h2>
                    <div
                        class="prose prose-lg text-gray-500 dark:text-gray-400 font-light leading-relaxed max-w-none whitespace-pre-line"
                    >
                        <p>{data.storyContent}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

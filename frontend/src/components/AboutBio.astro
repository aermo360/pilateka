---
import { fetchApi } from "../lib/strapi";
import { Image } from "astro:assets";

interface AboutBioData {
    storyTitle: string;
    storyContent: string;
    quote: string;
    image: {
        url: string;
        alternativeText: string;
    };
}

let data;
try {
    data = await fetchApi<AboutBioData>({
        endpoint: "about-bio",
        query: "populate=*",
    });
} catch (e) {
    data = null;
}

if (!data) {
    data = {
        storyTitle: "Moja Historia",
        storyContent:
            "Pilates poznałam w 2018 roku, i zafascynowała mnie ona od pierwszego zajęcia. Dwa lata później rozpoczęłam edukację nauczycielską. Po kilkunastu ukończonych szkoleniach i kilku tysiącach godzin poprowadzonych zajęć - postanowiłam stworzyć miejsce, w którym będę mogła dzielić się z Wami moją pasją do metody uczyć mądrego ruchu i pomagać w budowaniu sprawności.",
        quote: "Wierzę, że siła fizyczna buduje odporność psychiczną. W Pilatece budujesz obie.",
        image: {
            url: "https://images.unsplash.com/photo-1544005313-94ddf0286df2?auto=format&fit=crop&q=80&w=800",
            alternativeText: "Zdjęcie portret Katarzyny Wiśniewskiej",
        },
    };
}

const strapiUrl = import.meta.env.STRAPI_URL || "";
const imageUrl = data.image.url.startsWith("http")
    ? data.image.url
    : `${strapiUrl}${data.image.url}`;
---

<section class="bg-white dark:bg-background-dark py-16 lg:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-start">
            <div class="relative group">
                <div
                    class="aspect-[3/4] w-full bg-gray-200 dark:bg-gray-700 overflow-hidden relative shadow-sm"
                >
                    <Image
                        src={imageUrl}
                        alt={data.image.alternativeText}
                        width={600}
                        height={800}
                        class="w-full h-full object-cover object-center grayscale hover:grayscale-0 transition-all duration-1000 ease-in-out"
                    />
                    <div
                        class="absolute bottom-0 left-0 w-full h-1/3 bg-gradient-to-t from-primary/60 to-transparent opacity-40"
                    >
                    </div>
                </div>
            </div>
            <div class="space-y-10 lg:pl-8">
                <div class="space-y-6">
                    <h2
                        class="font-accent text-3xl md:text-4xl text-primary dark:text-white mb-4 uppercase tracking-widest"
                    >
                        {data.storyTitle}
                    </h2>
                    <div
                        class="prose prose-lg text-gray-500 dark:text-gray-400 font-light leading-relaxed max-w-none"
                    >
                        <p>{data.storyContent}</p>
                    </div>
                </div>
                <div
                    class="grid grid-cols-1 md:grid-cols-2 gap-8 pt-12 border-t border-gray-100 dark:border-gray-800"
                >
                    <div class="space-y-3">
                        <div
                            class="w-12 h-12 bg-primary/5 dark:bg-white/10 flex items-center justify-center rounded-full mb-4"
                        >
                            <span
                                class="material-icons-outlined text-primary dark:text-white text-xl"
                                >self_improvement</span
                            >
                        </div>
                        <h3
                            class="font-accent text-lg text-primary dark:text-white uppercase tracking-wider"
                        >
                            Świadome Podejście
                        </h3>
                        <p
                            class="text-sm text-gray-400 dark:text-gray-400 font-light leading-relaxed"
                        >
                            Skupienie na połączeniu oddechu z ruchem dla
                            głębszej świadomości ciała.
                        </p>
                    </div>
                    <div class="space-y-3">
                        <div
                            class="w-12 h-12 bg-primary/5 dark:bg-white/10 flex items-center justify-center rounded-full mb-4"
                        >
                            <span
                                class="material-icons-outlined text-primary dark:text-white text-xl"
                                >school</span
                            >
                        </div>
                        <h3
                            class="font-accent text-lg text-primary dark:text-white uppercase tracking-wider"
                        >
                            Ciągły Rozwój
                        </h3>
                        <p
                            class="text-sm text-gray-400 dark:text-gray-400 font-light leading-relaxed"
                        >
                            Stale poszerzam wiedzę, aby zapewniać bezpieczne i
                            skuteczne prowadzenie.
                        </p>
                    </div>
                </div>
                <blockquote
                    class="bg-background-light dark:bg-accent-dark p-10 md:p-12 border-l-4 border-primary dark:border-white mt-12 relative"
                >
                    <span
                        class="absolute top-6 left-6 text-6xl text-primary/10 dark:text-white/10 font-display leading-none"
                        >“</span
                    >
                    <p
                        class="font-accent text-xl text-primary dark:text-white relative z-10 leading-relaxed text-center"
                    >
                        {data.quote}
                    </p>
                    <footer
                        class="mt-6 text-[10px] font-bold tracking-[0.3em] uppercase text-primary/60 dark:text-gray-400"
                    >
                        KATARZYNA WIŚNIEWSKA
                    </footer>
                </blockquote>
            </div>
        </div>
    </div>
</section>

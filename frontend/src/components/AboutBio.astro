---
import { fetchApi } from "../lib/strapi";
import { Image } from "astro:assets";

interface AboutBioData {
    storyTitle: string;
    storyContent: string;
    quote: string;
    image: {
        url: string;
        alternativeText: string;
    };
}

let data;
try {
    data = await fetchApi<AboutBioData>({
        endpoint: "about-bio",
        query: "populate=*",
    });
} catch (e) {
    data = null;
}

if (!data) {
    data = {
        storyTitle: "Cześć! Mam na imię Kasia",
        storyContent:
            "Zapraszam Cię do Pilateki – miejsca, w którym mogę się dzielić moją pasją do genialnej formy ruchu, jaką jest pilates. Swoją przygodę z pilatesem zaczęłam w 2018 roku, a dwa lata później rozpoczęłam kursy nauczycielskie. Miałam okazję uczyć się od najlepszych master trenerów klasycznego pilatesu w Polsce i za granicą – ukończyłam 3 poziomy Classical Pilates Pioneer Program u Weroniki Ratkowskiej, Reformer i Cadillac Extensive Course u Karoliny Libelt, szkoliłam się również pod okiem Sonje Mayo, Lesley Bell, Victorii Torie-Capan, Carolyne Ergin oraz Elaine Ewing.",
        quote: "Stretch with strength and control. - Romana Krzyzanowska",
        image: {
            url: "https://images.unsplash.com/photo-1544005313-94ddf0286df2?auto=format&fit=crop&q=80&w=800",
            alternativeText: "Zdjęcie portret Katarzyny Wiśniewskiej",
        },
    };
}

const strapiUrl = import.meta.env.STRAPI_URL || "";
const imageUrl = data.image.url.startsWith("http")
    ? data.image.url
    : `${strapiUrl}${data.image.url}`;
---

<main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 lg:py-24">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-start">
        <div class="relative group">
            <div
                class="aspect-[3/4] w-full bg-gray-200 dark:bg-gray-700 overflow-hidden relative shadow-xl"
            >
                <Image
                    src={imageUrl}
                    alt={data.image.alternativeText}
                    width={600}
                    height={800}
                    class="w-full h-full object-cover object-center grayscale hover:grayscale-0 transition-all duration-700 ease-in-out"
                />
                <div
                    class="absolute bottom-0 left-0 w-full h-1/3 bg-gradient-to-t from-primary/80 to-transparent opacity-60"
                >
                </div>
            </div>
            <div
                class="absolute -z-10 top-6 -left-6 w-full h-full border-2 border-primary dark:border-white opacity-20 hidden md:block"
            >
            </div>
        </div>
        <div class="space-y-10 lg:pl-8">
            <div class="space-y-6">
                <h2
                    class="font-display text-3xl md:text-4xl text-primary dark:text-white mb-4"
                >
                    {data.storyTitle}
                </h2>
                <div
                    class="prose prose-lg text-gray-600 dark:text-gray-300 font-light leading-relaxed"
                >
                    <p>{data.storyContent}</p>
                </div>
            </div>
            <div
                class="grid grid-cols-1 md:grid-cols-2 gap-8 pt-8 border-t border-gray-100 dark:border-gray-800"
            >
                <div class="space-y-3">
                    <div
                        class="w-12 h-12 bg-primary/10 dark:bg-white/10 flex items-center justify-center rounded-full mb-2"
                    >
                        <span
                            class="material-icons-outlined text-primary dark:text-white"
                            >self_improvement</span
                        >
                    </div>
                    <h3
                        class="font-display text-xl text-primary dark:text-white"
                    >
                        Świadome Podejście
                    </h3>
                    <p
                        class="text-sm text-gray-500 dark:text-gray-400 leading-relaxed"
                    >
                        Skupienie na połączeniu oddechu z ruchem dla głębszej
                        świadomości ciała.
                    </p>
                </div>
                <div class="space-y-3">
                    <div
                        class="w-12 h-12 bg-primary/10 dark:bg-white/10 flex items-center justify-center rounded-full mb-2"
                    >
                        <span
                            class="material-icons-outlined text-primary dark:text-white"
                            >school</span
                        >
                    </div>
                    <h3
                        class="font-display text-xl text-primary dark:text-white"
                    >
                        Ciągły Rozwój
                    </h3>
                    <p
                        class="text-sm text-gray-500 dark:text-gray-400 leading-relaxed"
                    >
                        Stale poszerzam wiedzę, aby zapewniać bezpieczne i
                        skuteczne prowadzenie.
                    </p>
                </div>
            </div>
            <blockquote
                class="bg-accent-light dark:bg-accent-dark p-8 border-l-4 border-primary dark:border-white mt-8 relative"
            >
                <span
                    class="absolute top-4 left-4 text-6xl text-primary/10 dark:text-white/10 font-display leading-none"
                    >"</span
                >
                <p
                    class="font-display text-xl italic text-primary dark:text-white relative z-10"
                >
                    "{
                        data.quote
                            .replace(" - Romana Krzyzanowska", "")
                            .replace(" Romana Krzyzanowska", "")
                    }"
                </p>
                <footer
                    class="mt-4 text-sm font-medium tracking-wide uppercase text-gray-500 dark:text-gray-400"
                >
                    — Romana Krzyżanowska
                </footer>
            </blockquote>
        </div>
    </div>
</main>

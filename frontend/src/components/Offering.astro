---
import { fetchApi } from "../lib/strapi";

interface OfferItem {
  title: string;
  description: string;
  icon: string;
  linkText: string;
  link: string;
}

let offers;
try {
  offers = await fetchApi<OfferItem[]>({
    endpoint: "offers",
    query: "",
  });
} catch (e) {
  offers = null;
}

if (!offers || !Array.isArray(offers) || offers.length === 0) {
  offers = [
    {
      title: "Reformer Pilates",
      description:
        "Wykorzystaj opór reformera, aby wydłużyć, wzmocnić i uelastycznić całe ciało.",
      icon: "fitness_center",
      linkText: "SZCZEGÓŁY",
      link: "/oferta/",
    },
    {
      title: "Mat Pilates",
      description:
        "Powrót do podstaw. Wykorzystaj ciężar własnego ciała i drobne przybory do wymagającego treningu centrum.",
      icon: "eco",
      linkText: "SZCZEGÓŁY",
      link: "/oferta/",
    },
    {
      title: "Trening Indywidualny",
      description:
        "Indywidualna uwaga, w pełni dostosowana do Twoich celów fitness, potrzeb rehabilitacyjnych i harmonogramu.",
      icon: "person",
      linkText: "SZCZEGÓŁY",
      link: "/oferta/",
    },
  ];
}
---

<section
  class="py-24 bg-background-light dark:bg-background-dark transition-colors duration-300"
  id="nasza-oferta"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2
        class="text-4xl md:text-5xl font-accent text-primary dark:text-white mb-6"
      >
        Nasza Oferta
      </h2>
      <p
        class="text-gray-400 dark:text-gray-500 font-light max-w-2xl mx-auto text-sm tracking-wide"
      >
        Małe grupy i sesje prywatne dopasowane do potrzeb Twojego ciała.
      </p>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {
        offers.map((offer) => (
          <div class="group bg-white dark:bg-surface-dark p-10 md:p-12 shadow-sm border border-transparent hover:border-primary/10 transition-all duration-500 flex flex-col">
            <div class="w-14 h-14 bg-blue-50 dark:bg-blue-900/10 flex items-center justify-center rounded-full mb-8">
              <span class="material-icons-outlined text-primary dark:text-blue-300 text-2xl">
                {offer.icon}
              </span>
            </div>
            <h4 class="text-xl font-accent text-primary dark:text-white mb-4 italic">
              {offer.title}
            </h4>
            <p class="text-gray-400 dark:text-gray-500 font-light text-sm leading-relaxed mb-10">
              {offer.description}
            </p>
            <div class="mt-auto">
              <a
                class="text-primary dark:text-blue-300 text-[10px] uppercase tracking-[0.3em] font-bold border-b border-transparent group-hover:border-primary transition-all pb-1"
                href={offer.link}
              >
                {offer.linkText}
              </a>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

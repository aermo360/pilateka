---
import { fetchApi } from "../lib/strapi";

interface AboutHeroData {
  name: string;
  title: string;
}

let data;
try {
  data = await fetchApi<AboutHeroData>({
    endpoint: "about-hero",
    query: "",
  });
} catch (e) {
  data = null;
}

if (!data) {
  data = {
    name: "Katarzyna Wiśniewska",
    title: "Założycielka & Instruktorka Pilates",
  };
}
---

<header
  class="relative bg-accent-light dark:bg-accent-dark py-20 lg:py-32 overflow-hidden"
>
  <div
    class="absolute top-0 right-0 -mr-20 -mt-20 w-96 h-96 bg-primary opacity-5 rounded-full blur-3xl"
  >
  </div>
  <div
    class="absolute bottom-0 left-0 -ml-20 -mb-20 w-80 h-80 bg-primary opacity-5 rounded-full blur-3xl"
  >
  </div>
  <div
    class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10 text-center animate-fade-in"
  >
    <h1
      class="font-display text-5xl md:text-6xl lg:text-7xl text-primary dark:text-white mb-6"
    >
      {data.name}
    </h1>
    <p
      class="text-lg md:text-xl text-gray-600 dark:text-gray-400 font-light tracking-wide max-w-2xl mx-auto uppercase"
    >
      {data.title}
    </p>
    <div class="w-24 h-1 bg-primary mx-auto mt-8"></div>
  </div>
</header>

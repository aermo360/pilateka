---
import { fetchApi } from "../lib/strapi";

interface PricingHeroData {
  title: string;
  description: string;
}

let data;
try {
  data = await fetchApi<PricingHeroData>({
    endpoint: "pricing-hero",
    query: "",
  });
} catch (e) {
  data = null;
}

if (!data) {
  data = {
    title: "Cennik i Oferta",
    description:
      "Inwestuj w Twoje zdrowie i dobre samopoczucie. Wybierz pakiet idealnie dopasowany do Twoich potrzeb i rozpocznij świadomą pracę z ciałem w kameralnej atmosferze.",
  };
}
---

<header
  class="relative bg-background-light dark:bg-surface-dark py-24 sm:py-32 overflow-hidden"
>
  <div class="absolute inset-0 overflow-hidden">
    <div
      class="absolute -top-40 -right-40 w-96 h-96 bg-primary/5 dark:bg-primary/20 rounded-full blur-3xl"
    >
    </div>
    <div
      class="absolute top-40 -left-20 w-72 h-72 bg-blue-200/20 dark:bg-blue-900/20 rounded-full blur-3xl"
    >
    </div>
  </div>
  <div
    class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center animate-fade-in"
  >
    <h1
      class="text-4xl sm:text-5xl font-accent font-medium tracking-wide text-primary dark:text-white mb-6"
    >
      {data.title}
    </h1>
    <p
      class="max-w-2xl mx-auto text-lg text-gray-600 dark:text-gray-300 font-light leading-relaxed"
    >
      {data.description}
    </p>
    <div class="mt-8 flex justify-center">
      <div class="h-px w-24 bg-primary dark:bg-white"></div>
    </div>
  </div>
</header>

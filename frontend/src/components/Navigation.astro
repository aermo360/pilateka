<nav
    class="sticky top-0 w-full z-50 bg-background-light/90 dark:bg-background-dark/90 backdrop-blur-md border-b border-gray-100 dark:border-gray-800 transition-all duration-300"
>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-20">
            <div class="flex-shrink-0 flex items-center">
                <a class="group" href="/">
                    <img
                        src="/logo.jpg"
                        alt="Pilateka Logo"
                        class="h-10 md:h-12 w-auto dark:invert transition-all group-hover:opacity-90"
                    />
                </a>
            </div>
            <div class="hidden md:flex space-x-8 items-center">
                <a
                    class="text-[11px] uppercase tracking-widest text-primary dark:text-gray-300 hover:text-primary-light dark:hover:text-white transition-colors font-medium"
                    href="/">Główna</a
                >
                <a
                    class="text-[11px] uppercase tracking-widest text-primary dark:text-gray-300 hover:text-primary-light dark:hover:text-white transition-colors font-medium"
                    href="/studio/">Studio</a
                >
                <a
                    class="text-[11px] uppercase tracking-widest text-primary dark:text-gray-300 hover:text-primary-light dark:hover:text-white transition-colors font-medium"
                    href="/o-mnie/">O Mnie</a
                >
                <a
                    class="text-[11px] uppercase tracking-widest text-primary dark:text-gray-300 hover:text-primary-light dark:hover:text-white transition-colors font-medium"
                    href="/oferta/">Oferta</a
                >
                <a
                    class="text-[11px] uppercase tracking-widest text-primary dark:text-gray-300 hover:text-primary-light dark:hover:text-white transition-colors font-medium"
                    href="/eventy/">Eventy</a
                >
                <a
                    class="text-[11px] uppercase tracking-widest text-primary dark:text-gray-300 hover:text-primary-light dark:hover:text-white transition-colors border-l border-gray-200 dark:border-gray-700 pl-8 font-medium"
                    href="/kontakt/"
                >
                    Kontakt
                </a>
            </div>
            <div class="flex items-center space-x-2">
                <button
                    id="theme-toggle"
                    class="p-2 text-primary dark:text-gray-400 hover:text-primary-light transition-colors focus:outline-none"
                    aria-label="Toggle theme"
                >
                    <span class="material-icons-outlined dark:hidden text-xl"
                        >dark_mode</span
                    >
                    <span
                        class="material-icons-outlined hidden dark:block text-xl"
                        >light_mode</span
                    >
                </button>
                <button
                    id="mobile-menu-button"
                    class="md:hidden p-2 text-primary dark:text-gray-300 hover:text-primary-light focus:outline-none"
                    aria-label="Open menu"
                >
                    <span
                        class="material-icons-outlined text-2xl"
                        id="menu-icon">menu</span
                    >
                </button>
            </div>
        </div>
    </div>

    {/* Mobile Menu Overlay */}
    <div
        id="mobile-menu"
        class="hidden md:hidden absolute top-20 left-0 w-full bg-white dark:bg-background-dark border-b border-gray-100 dark:border-gray-800 shadow-xl z-40 transition-all duration-300"
    >
        <div class="flex flex-col p-8 space-y-6">
            <a
                class="text-xs uppercase tracking-[0.2em] text-primary dark:text-white font-bold"
                href="/">Główna</a
            >
            <a
                class="text-xs uppercase tracking-[0.2em] text-primary dark:text-white font-bold"
                href="/studio/">Studio</a
            >
            <a
                class="text-xs uppercase tracking-[0.2em] text-primary dark:text-white font-bold"
                href="/o-mnie/">O Mnie</a
            >
            <a
                class="text-xs uppercase tracking-[0.2em] text-primary dark:text-white font-bold"
                href="/oferta/">Oferta</a
            >
            <a
                class="text-xs uppercase tracking-[0.2em] text-primary dark:text-white font-bold"
                href="/eventy/">Eventy</a
            >
            <a
                class="text-xs uppercase tracking-[0.2em] text-primary dark:text-white font-bold pt-4 border-t border-gray-100 dark:border-gray-800"
                href="/kontakt/">Kontakt</a
            >
        </div>
    </div>
</nav>

<script>
    function initializeNav() {
        const themeToggle = document.getElementById("theme-toggle");
        themeToggle?.addEventListener("click", () => {
            document.documentElement.classList.toggle("dark");
            localStorage.setItem(
                "theme",
                document.documentElement.classList.contains("dark")
                    ? "dark"
                    : "light",
            );
        });

        const mobileMenuButton = document.getElementById("mobile-menu-button");
        const mobileMenu = document.getElementById("mobile-menu");
        const menuIcon = document.getElementById("menu-icon");

        mobileMenuButton?.addEventListener("click", () => {
            const isHidden = mobileMenu?.classList.contains("hidden");
            if (isHidden) {
                mobileMenu?.classList.remove("hidden");
                if (menuIcon) menuIcon.textContent = "close";
            } else {
                mobileMenu?.classList.add("hidden");
                if (menuIcon) menuIcon.textContent = "menu";
            }
        });

        // Close menu on link click
        const mobileLinks = mobileMenu?.querySelectorAll("a");
        mobileLinks?.forEach((link) => {
            link.addEventListener("click", () => {
                mobileMenu?.classList.add("hidden");
                if (menuIcon) menuIcon.textContent = "menu";
            });
        });
    }

    // Initialize on first load
    initializeNav();

    // Re-initialize after Astro page transitions
    document.addEventListener("astro:page-load", initializeNav);
</script>

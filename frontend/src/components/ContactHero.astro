---
import { fetchApi } from "../lib/strapi";

interface ContactHeroData {
  title: string;
  description: string;
}

let data;
try {
  data = await fetchApi<ContactHeroData>({
    endpoint: "contact-hero",
    query: "",
  });
} catch (e) {
  data = null;
}

if (!data) {
  data = {
    title: "Kontakt",
    description:
      "Chętnie odpowiem na Twoje pytania i pomogę Ci rozpocząć przygodę z Pilatesem.",
  };
}
---

<section
  class="relative bg-background-light dark:bg-surface-dark py-16 sm:py-24"
>
  <div class="max-w-7xl mx-auto text-center px-4 animate-fade-in">
    <h1
      class="font-accent text-4xl sm:text-5xl text-primary dark:text-white mb-6 uppercase tracking-widest"
    >
      {data.title}
    </h1>
    <p
      class="text-gray-500 dark:text-gray-400 font-light text-lg max-w-xl mx-auto leading-relaxed"
    >
      {data.description}
    </p>
  </div>
</section>

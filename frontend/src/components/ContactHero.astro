---
import { fetchApi } from '../lib/strapi';

interface ContactHeroData {
  title: string;
  description: string;
}

let data;
try {
  data = await fetchApi<ContactHeroData>({ 
    endpoint: 'contact-hero', 
    query: '' 
  });
} catch (e) {
  data = {
    title: "Kontakt",
    description: "Zapraszamy do naszego minimalistycznego studio w sercu Wrocławia. Skontaktuj się z nami, aby umówić się na sesję."
  };
}
---

<section class="relative bg-surface-light dark:bg-surface-dark py-16 sm:py-24">
    <div class="max-w-7xl mx-auto text-center px-4 animate-fade-in">
        <h1 class="font-accent text-4xl sm:text-5xl text-primary dark:text-white mb-6 uppercase tracking-widest">{data.title}</h1>
        <p class="text-gray-500 dark:text-gray-400 font-light text-lg max-w-xl mx-auto leading-relaxed">
            {data.description}
        </p>
    </div>
</section>

---
import { fetchApi } from '../lib/strapi';

interface ContactData {
  studioName: string;
  ownerName: string;
  address: string;
  email: string;
  instagramUrl: string;
  facebookUrl: string;
}

let data;
try {
  data = await fetchApi<ContactData>({ 
    endpoint: 'contact', 
    query: '' 
  });
} catch (e) {
  data = {
    studioName: "PILATEKA studio pilates",
    ownerName: "Katarzyna Wiśniewska",
    address: "ul. Hercena 3-5, 50-453 Wrocław",
    email: "studio@pilateka.pl",
    instagramUrl: "#",
    facebookUrl: "#"
  };
}
---

<div class="w-full md:w-1/2 p-8 sm:p-12 lg:p-16 bg-primary text-white flex flex-col justify-center relative overflow-hidden">
    <div class="absolute -top-20 -right-20 w-64 h-64 bg-white opacity-5 rounded-full"></div>
    <div class="absolute bottom-10 right-10 w-32 h-32 bg-white opacity-5 rounded-full"></div>
    <h2 class="font-accent text-2xl tracking-widest mb-10 border-b border-white/20 pb-4 inline-block w-full uppercase">DANE KONTAKTOWE</h2>
    <div class="space-y-8 font-light">
        <div class="flex items-start group">
            <span class="material-icons-outlined mr-4 text-2xl opacity-80 group-hover:opacity-100 transition-opacity">spa</span>
            <div>
                <p class="text-[10px] uppercase tracking-widest opacity-60 mb-1">Studio</p>
                <p class="text-lg font-normal uppercase tracking-wider">{data.studioName}</p>
            </div>
        </div>
        <div class="flex items-start group">
            <span class="material-icons-outlined mr-4 text-2xl opacity-80 group-hover:opacity-100 transition-opacity">person_outline</span>
            <div>
                <p class="text-[10px] uppercase tracking-widest opacity-60 mb-1">Właściciel</p>
                <p class="text-lg font-normal">{data.ownerName}</p>
            </div>
        </div>
        <div class="flex items-start group">
            <span class="material-icons-outlined mr-4 text-2xl opacity-80 group-hover:opacity-100 transition-opacity">place</span>
            <div>
                <p class="text-[10px] uppercase tracking-widest opacity-60 mb-1">Adres</p>
                <p class="text-lg font-normal leading-relaxed whitespace-pre-line">
                    {data.address}
                </p>
            </div>
        </div>
        <div class="flex items-start group">
            <span class="material-icons-outlined mr-4 text-2xl opacity-80 group-hover:opacity-100 transition-opacity">mail_outline</span>
            <div>
                <p class="text-[10px] uppercase tracking-widest opacity-60 mb-1">Email</p>
                <a class="text-lg font-normal hover:underline underline-offset-4 decoration-1" href={`mailto:${data.email}`}>
                    {data.email}
                </a>
            </div>
        </div>
    </div>
    <div class="mt-12 flex space-x-6 pt-8 border-t border-white/20">
        <a class="opacity-70 hover:opacity-100 transition-all hover:scale-110" href={data.instagramUrl} aria-label="Instagram">
            <svg class="w-6 h-6 fill-current" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg>
        </a>
        <a class="opacity-70 hover:opacity-100 transition-all hover:scale-110" href={data.facebookUrl} aria-label="Facebook">
            <svg class="w-6 h-6 fill-current" viewBox="0 0 24 24"><path d="M22.675 0h-21.35c-.732 0-1.325.593-1.325 1.325v21.351c0 .731.593 1.324 1.325 1.324h11.495v-9.294h-3.128v-3.622h3.128v-2.671c0-3.1 1.893-4.788 4.659-4.788 1.325 0 2.463.099 2.795.143v3.24l-1.918.001c-1.504 0-1.795.715-1.795 1.763v2.313h3.587l-.467 3.622h-3.12v9.293h6.116c.73 0 1.323-.593 1.323-1.325v-21.35c0-.732-.593-1.325-1.325-1.325z"/></svg>
        </a>
    </div>
</div>

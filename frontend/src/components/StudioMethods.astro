---
import { fetchApi } from "../lib/strapi";

interface MethodItem {
  title: string;
  description: string;
  icon: string;
  featured?: boolean;
}

let data;
try {
  data = await fetchApi<MethodItem[]>({
    endpoint: "studio-methods",
    query: "",
  });
} catch (e) {
  data = null;
}

if (!data || !Array.isArray(data) || data.length === 0) {
  data = [
    {
      title: "Reformer",
      description:
        "Serce studia. Nasze klasyczne reformery zapewniają opór i wsparcie potrzebne do skutecznego wydłużania i wzmacniania mięśni.",
      icon: "fitness_center",
    },
    {
      title: "Trening Indywidualny",
      description:
        "Prywatne sesje dostosowane całkowicie do potrzeb, historii i celów Twojego ciała. Najlepszy sposób na bezpieczny i głęboki progres.",
      icon: "self_improvement",
      featured: true,
    },
    {
      title: "Trening w Duetach",
      description:
        "Podziel się doświadczeniem z partnerem. Nasze treningi w duetach zachowują dbałość o szczegóły, oferując jednocześnie wspólną dynamikę.",
      icon: "groups",
    },
  ];
}
---

<section
  class="py-24 bg-background-light dark:bg-surface-dark border-y border-gray-100 dark:border-gray-800"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-20 max-w-3xl mx-auto">
      <span
        class="text-[10px] uppercase tracking-[0.4em] text-primary dark:text-blue-300 mb-4 block font-bold"
        >NASZA METODA</span
      >
      <h2
        class="text-4xl md:text-5xl font-accent text-primary dark:text-white mb-8"
      >
        Klasyczny Pilates na Sprzęcie Premium
      </h2>
      <p
        class="text-gray-400 dark:text-gray-500 font-light text-base tracking-wide"
      >
        Poznaj prawdziwą esencję Kontrologii na najwyższej klasy sprzęcie.
      </p>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {
        data.map((item) => (
          <div
            class={`bg-white dark:bg-background-dark p-10 md:p-14 text-center shadow-sm hover:shadow-md transition-all duration-500 group flex flex-col ${item.featured ? "relative md:scale-105 border-t-4 border-primary z-10" : "border-t border-gray-50"}`}
          >
            <div class="w-16 h-16 mx-auto bg-blue-50/50 dark:bg-surface-dark rounded-full flex items-center justify-center mb-10 group-hover:scale-110 transition-transform duration-500">
              <span class="material-icons-outlined text-primary dark:text-blue-300 text-3xl">
                {item.icon}
              </span>
            </div>
            <h3 class="text-2xl font-accent text-primary dark:text-white mb-6">
              {item.title}
            </h3>
            <p class="text-[15px] text-gray-400 dark:text-gray-500 font-light leading-relaxed">
              {item.description}
            </p>
          </div>
        ))
      }
    </div>
  </div>
</section>

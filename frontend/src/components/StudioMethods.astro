---
import { fetchApi } from "../lib/strapi";

interface MethodItem {
  title: string;
  description: string;
  icon: string;
  featured?: boolean;
}

let data;
try {
  data = await fetchApi<MethodItem[]>({
    endpoint: "studio-methods",
    query: "",
  });
} catch (e) {
  data = null;
}

if (!data || !Array.isArray(data) || data.length === 0) {
  data = [
    {
      title: "Kameralność",
      description:
        "Trenujemy przede wszystkim indywidualnie i w duetach, co pozwala na pełne skupienie na Twoich potrzebach.",
      icon: "group_work",
    },
    {
      title: "Sprzęt",
      description:
        "Klasyczny sprzęt marek Legacy Pilates oraz V PILATES APPARATUS.",
      icon: "home_max",
      featured: true,
    },
    {
      title: "Atmosfera",
      description: "Spokój i minimalizm, które sprzyjają koncentracji.",
      icon: "spa",
    },
  ];
}
---

<section
  class="py-20 bg-background-light dark:bg-surface-dark border-y border-gray-100 dark:border-gray-800"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16 max-w-3xl mx-auto">
      <span
        class="text-sm uppercase tracking-widest text-primary dark:text-white/80 mb-2 block"
        >Co nas wyróżnia</span
      >
      <h2
        class="text-3xl md:text-4xl font-display text-gray-900 dark:text-white mb-6"
      >
        Dlaczego My?
      </h2>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {
        data.map((item) => (
          <div
            class={`bg-background-light dark:bg-background-dark p-8 md:p-10 text-center hover:shadow-lg transition-shadow duration-300 group ${item.featured ? "relative transform md:-translate-y-4" : ""}`}
          >
            {item.featured && (
              <div class="absolute top-0 left-0 w-full h-1 bg-primary" />
            )}
            <div class="w-16 h-16 mx-auto bg-white dark:bg-surface-dark rounded-full flex items-center justify-center mb-6 shadow-sm group-hover:scale-110 transition-transform">
              <span class="material-icons-outlined text-primary text-3xl">
                {item.icon}
              </span>
            </div>
            <h3 class="text-xl font-display text-gray-900 dark:text-white mb-3">
              {item.title}
            </h3>
            <p class="text-sm text-gray-600 dark:text-gray-400 font-light leading-relaxed">
              {item.description}
            </p>
          </div>
        ))
      }
    </div>
  </div>
</section>

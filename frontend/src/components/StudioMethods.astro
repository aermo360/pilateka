---
import { fetchApi } from '../lib/strapi';

interface MethodItem {
  title: string;
  description: string;
  icon: string;
  featured?: boolean;
}

let data;
try {
  data = await fetchApi<MethodItem[]>({ 
    endpoint: 'studio-methods', 
    query: '' 
  });
} catch (e) {
  data = [
    {
      title: "Reformer",
      description: "Serce studia. Nasze klasyczne reformery zapewniają opór i wsparcie potrzebne do skutecznego wydłużania i wzmacniania mięśni.",
      icon: "fitness_center"
    },
    {
      title: "Trening Indywidualny",
      description: "Prywatne sesje dostosowane całkowicie do potrzeb, historii i celów Twojego ciała. Najlepszy sposób na bezpieczny i głęboki progres.",
      icon: "self_improvement",
      featured: true
    },
    {
      title: "Trening w Duetach",
      description: "Podziel się doświadczeniem z partnerem. Nasze treningi w duetach zachowują dbałość o szczegóły, oferując jednocześnie wspólną dynamikę.",
      icon: "groups"
    }
  ];
}
---

<section class="py-20 bg-white dark:bg-surface-dark border-y border-gray-100 dark:border-gray-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16 max-w-3xl mx-auto">
            <span class="text-sm uppercase tracking-widest text-primary dark:text-white/80 mb-2 block">Nasza Metoda</span>
            <h2 class="text-3xl md:text-4xl font-display text-gray-900 dark:text-white mb-6">Klasyczny Pilates na Sprzęcie Premium</h2>
            <p class="text-gray-600 dark:text-gray-300 font-light">
                Poznaj prawdziwą esencję Kontrologii na najwyższej klasy sprzęcie.
            </p>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {data.map((item) => (
                <div class={`bg-background-light dark:bg-background-dark p-8 md:p-10 text-center hover:shadow-lg transition-shadow duration-300 group ${item.featured ? 'relative transform md:-translate-y-4' : ''}`}>
                    {item.featured && <div class="absolute top-0 left-0 w-full h-1 bg-primary"></div>}
                    <div class="w-16 h-16 mx-auto bg-white dark:bg-surface-dark rounded-full flex items-center justify-center mb-6 shadow-sm group-hover:scale-110 transition-transform">
                        <span class="material-icons-outlined text-primary text-3xl">{item.icon}</span>
                    </div>
                    <h3 class="text-xl font-display text-gray-900 dark:text-white mb-3">{item.title}</h3>
                    <p class="text-sm text-gray-600 dark:text-gray-400 font-light leading-relaxed">
                        {item.description}
                    </p>
                </div>
            ))}
        </div>
    </div>
</section>
